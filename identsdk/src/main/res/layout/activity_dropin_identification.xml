<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".dropinui.DropInIdentificationActivity">
    <ImageView app:layout_constraintTop_toTopOf="parent" android:layout_width="200dp"
               android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="12dp"
               android:layout_marginTop="12dp"
               android:src="@drawable/logo_ausweisident"
               android:id="@+id/imageView"/>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent" android:id="@+id/container"
                 app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintEnd_toEndOf="parent">
    </FrameLayout>

</android.support.constraint.ConstraintLayout>