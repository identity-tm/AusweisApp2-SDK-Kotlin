<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dropinui.AuthorisationFragment"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:padding="24dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="@string/twigbit_ident_drop_in_enter_pin" app:layout_constraintBottom_toTopOf="@+id/editPin"
            tools:layout_editor_absoluteX="44dp"/>
    <EditText
            android:id="@+id/editPin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:padding="16dp"
            android:textSize="26sp"
            android:maxLength="10"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/buttonContinue"/>

    <Button android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/buttonContinue"
                                                  android:padding="8dp"
                                                  android:foregroundTint="@color/colorPrimaryDark"
                                                  android:text="@string/twigbit_ident_drop_in_continue"
                                                  app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>