<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipChildren="false"
              android:clipToPadding="false"
              android:orientation="vertical"
              tools:context=".dropinui.IntroFragment">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <ImageButton android:layout_width="48dp" android:layout_height="48dp" android:background="@null" android:id="@+id/buttonBack"
                     android:src="@drawable/twigbit_ident_icon_back"/>
    </LinearLayout>
    <!-- TODO: Add header back button -->
    <!-- TODO: Add card displaying certificate info -->
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:padding="12dp"
                android:layout_weight="1">

        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_marginBottom="16dp"
                                            android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:padding="16dp">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:layout_marginRight="16dp"
                               android:src="@drawable/twigbit_ident_icon_info"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                                  android:orientation="vertical"
                                  android:layout_weight="1">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:text="Anbieterinformationen"
                                  android:layout_gravity="center"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceHeadline"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                                android:layout_marginTop="24dp">
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_weight="1">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:text="Dienstanbieter"
                                  android:textColor="@color/colorAccent"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceOverline"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceBody"
                                  android:id="@+id/textServiceProviderName"
                                  android:text="Selbstauskunft"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceBody"
                                  android:id="@+id/textServiceProviderUrl"
                                  android:text="Selbstauskunft"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                                android:layout_marginTop="24dp">
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_weight="1">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:text="Aussteller des Berechtigungszertifikats"
                                  android:textColor="@color/colorAccent"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceOverline"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceBody"
                                  android:id="@+id/textIssuerName"
                                  android:text="Selbstauskunft"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceBody"
                                  android:id="@+id/textIssuerUrl"
                                  android:text="Selbstauskunft"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                                android:layout_marginTop="24dp">
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_weight="1">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:text="Zweck"
                                  android:textColor="@color/colorAccent"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceOverline"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceBody"
                                  android:id="@+id/textPurpose"
                                  android:text="Selbstauskunft"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                                android:layout_marginTop="24dp">
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_weight="1">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:text="GÃ¼ltigkeit"
                                  android:textColor="@color/colorAccent"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceOverline"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceBody"
                                  android:id="@+id/textValidity"
                                  android:text="Selbstauskunft"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                                android:layout_marginTop="24dp">
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_weight="1">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:text="Angaben zum Dienstanbieter"
                                  android:textColor="@color/colorAccent"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceOverline"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="@style/TwigbitIdentTheme.TextAppearanceBody"
                                  android:id="@+id/textServiceProviderInfo"
                                  android:text="Selbstauskunft"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>