<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        tools:context=".MainActivity">
    <ImageView android:layout_width="wrap_content" android:layout_height="140dp"
               app:layout_constraintStart_toStartOf="parent"
               android:src="@drawable/illu_twigbit_ident"
               android:scaleType="fitCenter"
               app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Twigbit Ident SDK - Sample App"
              app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
              android:id="@+id/textTitle"
              android:layout_marginTop="24dp"/>
    <android.support.design.button.MaterialButton android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/buttonDropIn"
                                                  app:layout_constraintTop_toBottomOf="@+id/textTitle"
                                                  android:layout_marginTop="48dp"
                                                  android:backgroundTint="@color/colorPrimaryDark"
                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  android:text="Test Drop-In UI"
    />

</android.support.constraint.ConstraintLayout>